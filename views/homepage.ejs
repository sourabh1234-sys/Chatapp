<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Application</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0D0D0D;
            margin: 0;
            padding: 0;
            color: #FFFFFF;
        }
        .chat-container {
            width: 100%;
            max-width: 800px;
            margin: 30px auto;
            background-color: #1E1E1E;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            border-radius: 10px;
            overflow: hidden;
        }
        .chat-messages {
            padding: 20px;
            height: 450px;
            overflow-y: auto;
            background-color: #0A0A0A;
            border-bottom: 2px solid #333;
            font-size: 16px;
        }
        .message {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }
        .message p {
            background-color: #333;
            padding: 12px 18px;
            border-radius: 8px;
            max-width: 80%;
            word-wrap: break-word;
        }
        .message.user p {
            background-color: #25D366;
            color: white;
            align-self: flex-end;
        }
        .chat-input {
            padding: 15px;
            background-color: #121212;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 2px solid #333;
        }
        .chat-input input {
            width: 80%;
            padding: 12px;
            border: 1px solid #444;
            border-radius: 6px;
            background-color: #1E1E1E;
            color: white;
            font-size: 14px;
        }
        .chat-input button {
            padding: 12px 18px;
            background-color: #25D366;
            border: none;
            color: white;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
        }
    </style>
</head>
<body>

<div class="chat-container">
    <div class="chat-messages" id="chat-messages">
        <div class="message">
            <p>Welcome to the chat!</p>
        </div>
    </div>
    <div class="chat-input">
        <form id="chat-form" style="width: 100%; display: flex;">
            <input type="text" placeholder="Type a message..." id="message" required>
            <button type="submit" id="send-btn">Send</button>
        </form>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    const chatForm = document.getElementById('chat-form');
    const messageInput = document.getElementById('message');
    const chatMessages = document.getElementById('chat-messages');

    chatForm.addEventListener('submit', (e) => {
        e.preventDefault();  
        const message = messageInput.value;
        socket.emit('message', { message, sender: 'user' });
        messageInput.value = '';
    });

    socket.on('message', (data) => {
        appendMessage(data.message, data.sender);
    });

    function appendMessage(message, sender) {
        const div = document.createElement('div');
        div.classList.add('message');
        if (sender === 'user') {
            div.classList.add('user');  
        }
        div.innerHTML = `<p>${message}</p>`;
        chatMessages.appendChild(div);
        chatMessages.scrollTop = chatMessages.scrollHeight;  
    }

    setTimeout(() => {
        socket.emit('message', { message: 'Hi, how can I assist you today?', sender: 'other' });
    }, 2000);
</script>

</body>
</html>
